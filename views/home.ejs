<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Clinic Portal</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary: #1976d2;
      --secondary: #bbdefb;
      --card-bg: rgba(255, 255, 255, 0.15);
      --text-dark: #0d47a1;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: radial-gradient(circle at top left, #e3f2fd, #bbdefb);
      background-attachment: fixed;
      background-size: cover;
      min-height: 100vh;
      padding-top: 90px;
    }

    /* Animated Gradient Keyframes */
    @keyframes navbarGradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    @keyframes fadeSlideInLeft {
      from {
        opacity: 0;
        transform: translateX(-40px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes fadeSlideInRight {
      from {
        opacity: 0;
        transform: translateX(40px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    /* Pulse shadow animation */
    @keyframes pulseShadow {
      0%, 100% {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      }
      50% {
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.15);
      }
    }

    /* Slide down animation */
    @keyframes navbarSlideDown {
      from {
        opacity: 0;
        transform: translateY(-40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Navbar */
    .navbar {
  background: linear-gradient(90deg, #1976d2, #42a5f5, #1976d2);
  background-size: 300% 100%;
  animation-name: navbarGradient, navbarSlideDown, pulseShadow;
  animation-duration: 10s, 0.8s, 4s;
  animation-timing-function: ease, ease, ease-in-out;
  animation-iteration-count: infinite, 1, infinite;
  animation-fill-mode: forwards;
  color: white;
  position: fixed;
  top: 0;
  width: 100%;
  padding: 15px 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1000;
  transition: background 0.3s ease, box-shadow 0.3s ease;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}


    /* Navbar hover effect */
   .navbar:hover {
  background-position: 100% 50%;
  box-shadow: 0 6px 30px rgba(0, 0, 0, 0.25);
}

    /* Navbar Brand Animation */
    .brand {
      font-size: 1.8rem;
      font-weight: 700;
      animation: fadeSlideInLeft 1s ease-out forwards;
      transition: transform 0.3s ease;
      cursor: default;
    }

    .brand:hover {
      transform: scale(1.05);
    }

    /* Nav Links */
    .nav-links {
      display: flex;
      align-items: center;
      gap: 20px;
      animation: fadeSlideInRight 1s ease-out forwards;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      font-weight: 500;
      padding: 8px 14px;
      border-radius: 8px;
      transition: background 0.3s ease, transform 0.3s ease, color 0.3s ease;
      position: relative;
    }

    .nav-links a::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      height: 2px;
      width: 0%;
      background-color: #ffeb3b;
      transition: width 0.3s ease;
    }

    .nav-links a:hover::after {
      width: 100%;
    }

    .nav-links a:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: scale(1.1);
      color: #ffeb3b;
    }

    /* Container */
    .main {
      max-width: 1200px;
      margin: auto;
      padding: 40px 20px;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 30px;
    }

    @media (max-width: 1000px) {
      .grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 600px) {
      .grid {
        grid-template-columns: 1fr;
      }

      .navbar {
        flex-direction: column;
        align-items: flex-start;
      }

      .nav-links {
        margin-top: 10px;
      }
    }

    /* Card Styles */
    .card-link {
      text-decoration: none;
      color: inherit;
      display: block;
      cursor: pointer;
    }

    .card {
      background: var(--card-bg);
      border-radius: 20px;
      padding: 35px 20px;
      text-align: center;
      color: var(--text-dark);
      box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
      backdrop-filter: blur(12px);
      transition: transform 0.4s ease, box-shadow 0.4s ease;
      position: relative;
      overflow: hidden;
    }

    .card:hover {
      transform: translateY(-12px) scale(1.02);
      box-shadow: 0 20px 45px rgba(0, 0, 0, 0.2);
    }

    .card::after {
      content: '';
      position: absolute;
      top: -20%;
      left: -20%;
      width: 150%;
      height: 150%;
      background: linear-gradient(120deg, rgba(255,255,255,0.15), transparent, rgba(255,255,255,0.05));
      transform: rotate(25deg);
      z-index: 0;
    }

    .card img {
      width: 80px;
      height: 80px;
      object-fit: contain;
      margin-bottom: 20px;
      position: relative;
      z-index: 1;
    }

    .card-title {
      font-size: 1.3rem;
      font-weight: 600;
      position: relative;
      z-index: 1;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include('./part/nav') %>

  <!-- Main Content -->
  <div class="main">
    <div class="grid">

      <a href="/doctor" class="card-link">
