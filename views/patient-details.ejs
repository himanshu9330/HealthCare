<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Patient History</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #1976d2;
      --accent: #43a047;
      --bg-gradient: linear-gradient(135deg, #bbdefb, #e3f2fd);
      --glass-bg: rgba(255, 255, 255, 0.2);
      --border: rgba(255, 255, 255, 0.25);
      --text-color: #0d47a1;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--bg-gradient);
      backdrop-filter: blur(3px);
      -webkit-backdrop-filter: blur(3px);
      padding: 40px 20px;
      color: var(--text-color);
    }

    .container {
      max-width: 960px;
      background: var(--glass-bg);
      border: 1px solid var(--border);
      border-radius: 16px;
      margin: auto;
      padding: 40px 30px;
      backdrop-filter: blur(18px);
      -webkit-backdrop-filter: blur(18px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    h1 {
      font-size: 2rem;
      font-weight: 700;
      text-align: center;
      color: var(--primary);
      margin-bottom: 40px;
    }

    h2 {
      color: var(--primary);
      font-size: 1.4rem;
      margin-bottom: 20px;
    }

    .section {
      margin-bottom: 40px;
    }

    .label {
      font-weight: 600;
    }

    p {
      margin: 8px 0;
      line-height: 1.5;
    }

    ul {
      padding-left: 20px;
      margin-top: 10px;
    }

    li {
      margin-bottom: 6px;
    }

    .entry {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      padding: 20px;
      margin-bottom: 20px;
      border-left: 5px solid var(--accent);
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }

    .entry p {
      color: #333;
    }

    .back-link {
      display: inline-block;
      text-decoration: none;
      margin-top: 30px;
      padding: 12px 28px;
      font-weight: 600;
      background-color: var(--primary);
      color: white;
      border-radius: 10px;
      transition: background 0.3s ease;
      text-align: center;
    }

    .back-link:hover {
      background-color: #125ea8;
    }

    @media (max-width: 600px) {
      .container {
        padding: 30px 20px;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Patient Full Medical History</h1>

    <div class="section">
      <p><span class="label">Name:</span> <%= patient.name %></p>
      <p><span class="label">Age:</span> <%= patient.age %></p>
      <p><span class="label">Gender:</span> <%= patient.gender %></p>
      <p><span class="label">Patient ID:</span> <%= patient._id %></p>
      <% if (doctor) { %>
        <p><span class="label">Doctor:</span> <%= doctor.name %></p>
      <% } %>
    </div>

    <div class="section">
      <h2>Current Symptoms</h2>
      <ul>
        <% patient.symptoms.forEach(sym => { %>
          <li><%= sym %></li>
        <% }) %>
      </ul>
    </div>

    <div class="section">
      <h2>History</h2>
      <% if (patient.history && patient.history.length > 0) { %>
        <% patient.history.forEach(entry => { %>
          <div class="entry">
            <p><strong>Date:</strong> <%= new Date(entry.date).toLocaleDateString() %></p>
            <p><strong>Symptoms:</strong> <%= entry.symptoms.join(', ') %></p>
            <p><strong>Diagnosis:</strong> <%= entry.diagnosis || "Not provided" %></p>

            <% if (entry.prescription && entry.prescription.length > 0) { %>
              <p><strong>Medicines:</strong></p>
              <ul>
                <% entry.prescription.forEach(pres => { %>
                  <% if (pres.medicines && pres.medicines.length > 0) { %>
                    <% pres.medicines.forEach(med => { %>
                      <li><%= med.name %> - <%= med.dosage %> (<%= med.instructions %>)</li>
                    <% }) %>
                  <% } else { %>
                    <li>No medicines listed.</li>
                  <% } %>
                <% }) %>
              </ul>
            <% } else { %>
              <p><em>No prescriptions available.</em></p>
            <% } %>
          </div>
        <% }) %>
      <% } else { %>
        <p>No medical history available.</p>
      <% } %>
    </div>

    <a href="/" class="back-link">ðŸ”™ Back to Home</a>
  </div>

</body>
</html>
